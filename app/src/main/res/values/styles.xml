<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorBackgroundDark</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorBackground">@color/colorBackgroundLight</item>
        <item name="android:textColor">@color/textColorDarkAmoled</item>
        <item name="android:shadowColor">@color/textShadowColorLight</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="colorConfirmed">@color/colorConfirmedDarkAmoled</item>
        <item name="colorActive">@color/colorActiveDarkAmoled</item>
        <item name="colorSuspected">@color/colorSuspectedDarkAmoled</item>
        <item name="colorDeaths">@color/colorDeathsDarkAmoled</item>
        <item name="colorRecovered">@color/colorRecoveredDarkAmoled</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorBackground">@color/colorBackgroundDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="colorConfirmed">@color/colorConfirmedDark</item>
        <item name="colorActive">@color/colorActiveDark</item>
        <item name="colorSuspected">@color/colorSuspectedDark</item>
        <item name="colorDeaths">@color/colorDeathsDark</item>
        <item name="colorRecovered">@color/colorRecoveredDark</item>
    </style>

    <style name="AppTheme.Dark.Amoled" parent="AppTheme.Dark">
        <item name="colorBackground">@color/colorBackgroundDarkAmoled</item>
        <item name="android:textColor">@color/textColorDarkAmoled</item>
        <item name="colorConfirmed">@color/colorConfirmedDarkAmoled</item>
        <item name="colorActive">@color/colorActiveDarkAmoled</item>
        <item name="colorSuspected">@color/colorSuspectedDarkAmoled</item>
        <item name="colorDeaths">@color/colorDeathsDarkAmoled</item>
        <item name="colorRecovered">@color/colorRecoveredDarkAmoled</item>
    </style>

    <style name="style_tv_case_count">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_tv_case_count.delta" parent="style_tv_case_count">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="style_tv_case_count.current" parent="style_tv_case_count">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="style_tv_case_count_label">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="style_pb_case_count">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="style_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.01</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="style_ll_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_ll_labels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_ll_values">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_ll_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_widget</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minWidth">320dp</item>
        <item name="android:minHeight">140dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>
